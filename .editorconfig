# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
indent_style = space
insert_final_newline = true
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.toml]
indent_size = 4
